{% extends "index.html.twig" %}

{% block section %}
<form method="post" action="index.php?action=valider_inscription" class="well">
	<fieldset>
	<legend>Formulaire d'inscription</legend>
		<div class="form-group row">
		<label for="nom" class="col-sm-2 col-form-label col-form-label-sm">Nom</label>
		<div class="col-sm-6">
			<input  type="text" id="nom" class="form-control form-control-sm" name="nom" required placeholder="" />
		</div>
		</div>
		<div class="form-group row">
		<label for="prenom" class="col-sm-2 col-form-label col-form-label-sm">Prénom</label>
		<div class="col-sm-6">
			<input  type="text" id="prenom" class="form-control form-control-sm" name="prenom" required placeholder="" />
		</div>
		</div>
		<div class="form-group row">
		<label for="anneenaissance" class="col-sm-2 col-form-label col-form-label-sm">Année de naissance</label>
		<div class="col-sm-6">
			<input  type="year" id="anneenaissance" class="form-control form-control-sm" name="anneenaissance" required placeholder="" />
		</div>
		</div>
		<div class="form-group row">
		<label for="email" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
		<div class="col-sm-6">
			<input  type="email" id="email" class="form-control form-control-sm" name="email" required placeholder="" />
		</div>
		</div>
		<div class="form-group row">
		<label for="password" class="col-sm-2 col-form-label col-form-label-sm">Mot de passe</label>
		<div class="col-sm-6">
			<input  type="password" id="password" class="form-control form-control-sm" name="password" required placeholder="" />
		</div>
		</div>
		<div class="form-group row">
		<label for="sexe" class="col-sm-2 col-form-label col-form-label-sm">Sexe</label>
		<div class="col-sm-6">
			<input  type="sexe" id="sexe" class="form-control form-control-sm" name="sexe" required placeholder="Femme ou Homme?" />
		</div>
		</div>
		<div class="form-group row">
		<label for="telportable" class="col-sm-2 col-form-label col-form-label-sm">Téléphone</label>
		<div class="col-sm-6">
			<input  type="text" id="telportable" class="form-control form-control-sm" name="telportable" required placeholder="" />
		</div>
		</div>
	<div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Accepter les termes et conditions
      </label>
    </div>
  </div>
  	<div class="col-12">
	<input type="submit" name="valider_inscription" value="Inscription"/>
	</div>
	</fieldset>
	</form>
	
{% endblock %}