{% extends "index.html.twig" %}

{% block section %}
   <form id="recherche" method="post" action="index.php?action=valider_recher_equipe" class="well">
   <fieldset class="form-group"> <legend>Rechercher équipe</legend>
        <div class="form-group row">
            <label for="nom" class="col-sm-2 col-form-label col-form-label-sm">Nom de l'équipe :
			</label>
            <div class="col-sm-10">
                <input type="text" id="nom" name="nom" class="form-control form-control-sm" placeholder="saisie le nom de l'equipe"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="victoires_min" class="col-sm-2 col-form-label col-form-label-sm">Nombre minimum de victoires :</label>
            <div class="col-sm-10">
                <input type="number" id="victoires_min" name="victoires_min" min="0"/>
            </div>
        </div>
		
    <input type="submit" name="valider_recher_equipe" value="Rechercher"/>
   </fieldset>
   </form>

{% endblock %}
