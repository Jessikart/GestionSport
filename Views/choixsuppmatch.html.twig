{% extends "index.html.twig" %}

{% block section %}
   <form method="post" action="index.php?action=valider_choixsupp_matchs" class="well">
       <fieldset>
           <legend>Quel match voulez-vous supprimer?</legend>
           <select name="id_matchs" class="form-control form-control-sm">
               {% for matchs in matchs %}
                   <option value="{{ matchs.id_matchs }}">{{ matchs.nom_match }}</option>
               {% else %}
                   <option disabled>Aucun match disponible</option>
               {% endfor %}
           </select>
           <input type="submit" name="valider_choixsupp_matchs" value="supprimer" />
       </fieldset>
   </form>

{% endblock %}
